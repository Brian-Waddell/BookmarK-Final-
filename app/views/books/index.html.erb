<p style="color: green"><%= notice %></p>

<h1>Books</h1>
<%= search_form_for @q do |f| %> 
  <p> Narrow results:</p> 

  <div>
    <%= f.label :title_cont, "Title containing" %> 
    <%= f.text_field :title_cont, :placeholder => "Enter a book " %> 
  </div> 


  <%= f.submit :class => "btn btn-primary btn-block" %> 

  <a href="/books"> Clear filers </a> 

<% end %> 


<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New  book", new_book_path %>
