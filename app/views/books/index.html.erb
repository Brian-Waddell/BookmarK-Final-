<div>
  <p style="color: green"><%= notice %></p>

    <div style="background-image: url('https://images.unsplash.com/photo-1568667256549-094345857637?q=80&w=2815&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover; background-position: center; position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;"></div>

  <%= link_to "Create a New  book to discuss", new_book_path %>


  <h1 class= "color">The Library</h1>

  <div> 
  <%= search_form_for @q do |f| %> 

    <h6 class = "color"> Filter your results:</h6> 

    <div class = "color">
      <%= f.label :title_cont, "Title containing" %> 
      <%= f.text_field :title_cont, :placeholder => "Enter a book " %> 
    </div> 

    <div class = "color">
      <%= f.label :author_cont, "Author containing" %> 
      <%= f.text_field :author_cont, :placeholder => "Enter an author" %> 
    </div> 

    <div class = "color">
      <%= f.label :genre_cont, "Genre Search" %> 
      <%= f.text_field :genre_cont, :placeholder => "i.e fiction " %> 
    </div>

    <div>
      <%= f.submit :class => "btn btn-primary btn-block" %> 
    </div>
 
  <a href="/books"> Clear filers </a> 

   <% end %> 
</div> 

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @books.each do |book| %>
   <%= render book %>
    
  <% end %>

</div>
