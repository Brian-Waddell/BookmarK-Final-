<p style="color: green"><%= notice %></p>

<%= render @book %>

<%= form_with model: Follow.new do |form| %>
  <%= form.hidden_field :book_id, value: @book.id %>
  <%= form.submit 'Add to favorites', class: "btn btn-primary" %>
<% end %>


<hr>



<h2>Comments About <%= @book.title %></h2>
<ul class="list-group list-group-flush">
  <% @book.comments.each do |comment| %>
  <li class ="list-group-item">
    <div class= "card" >
    <div class= "card-body">
      <p><%= comment.body %></p>
      <p><%= comment.participant.username %></p>
      <%= button_to 'Delete', comment_path(comment), method: :delete, remote: true, class: 'delete-comment-btn' %>
    </div>
    </div>
  <% end %>
</ul>

<h3> Add a comment </h3>
  <%= render "comments/form", comment: @book.comments.build %>


<div>
  <%= link_to "Edit this book", edit_book_path(@book) %> |
  
  
  
</div>
