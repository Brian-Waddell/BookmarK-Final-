

  
 
<div class="cards-container" >
  <div class="card text-bg-dark m-3" style="max-width: 18rem;">
  <div class="card-header"> <%= book.title %> </div>
  <div class="card-body">
  <h5 class="card-title">Genre: <%= book.genre %> </h5>
  <h5 class="card-title">Author: <%= book.author %> </h5>
  <p class="card-text">Summary: <%= book.summary %> </p>
  <h5 class="card-title">Who posted it? <%= book.user.username.capitalize %> </h5>

<%= button_to "Show this book", book_path(book), method: :get, class: "btn btn-outline-success"  %>

 <% if current_user && book.user_id == current_user.id %>
  <p> <%= button_to "Destroy this book", book, method: :delete,  class: "btn btn-outline-danger" %> </p>
  <%end%>
 </div>
 </div>
</div>
